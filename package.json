{
  "name": "@versatiles/svelte",
  "version": "2.2.0",
  "license": "MIT",
  "scripts": {
    "build": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && vite build && npm run package",
    "check-watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "check": "npm run lint && npm run build && npm run test && npm run format:check",
    "dev": "vite dev",
    "format": "prettier --write --log-level warn .",
    "format:check": "prettier --check .",
    "lint": "eslint --color .",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepack": "npm run build",
    "prepublishOnly": "npm run package",
    "preview": "vite preview",
    "release": "vrt release-npm",
    "screenshots": "npx tsx ./scripts/screenshots.ts",
    "test-coverage": "vitest run --coverage",
    "test-playwright": "./scripts/test_playwright.sh",
    "test-unit": "vitest run --testTimeout 10000",
    "test": "npm run test-unit && npm run test-playwright",
    "upgrade": "vrt deps-upgrade",
    "prepare": "husky"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.spec.*",
    "!dist/**/__mocks__/*",
    "!dist/**/*.test.*",
    "!dist/BBoxMap/data/*",
    "!dist/BBoxMap/helpers/*"
  ],
  "peerDependencies": {
    "sass-embedded": "^1.96.0",
    "svelte": "^5.45.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.52.0",
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@turf/turf": "^7.3.4",
    "@types/eslint": "^9.6.1",
    "@types/node": "^25.2.3",
    "@versatiles/release-tool": "^2.7.1",
    "@vitest/coverage-v8": "^4.0.18",
    "cookie": "^1.1.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.15.0",
    "geojson": "^0.5.0",
    "globals": "^17.3.0",
    "happy-dom": "^20.6.1",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "publint": "^0.3.17",
    "sass-embedded": "^1.97.3",
    "svelte": "^5.51.2",
    "svelte-check": "^4.4.0",
    "svelte-preprocess": "^6.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "@versatiles/style": "^5.9.3",
    "maplibre-gl": "^5.18.0"
  }
}

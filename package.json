{
  "name": "@versatiles/svelte",
  "version": "2.1.5",
  "license": "MIT",
  "scripts": {
    "build": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && vite build && npm run package",
    "check-watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "check": "npm run format && npm run lint && npm run build && npm run test",
    "dev": "vite dev",
    "format": "prettier --write --log-level warn .",
    "lint": "prettier --check . && eslint --color .",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepack": "npm run build",
    "prepublishOnly": "npm run package",
    "preview": "vite preview",
    "release": "vrt release-npm",
    "screenshots": "npx tsx ./scripts/screenshots.ts",
    "test-coverage": "vitest run --coverage",
    "test-playwright": "./scripts/test_playwright.sh",
    "test-unit": "vitest run",
    "test": "npm run test-unit && npm run test-playwright",
    "upgrade": "vrt deps-upgrade"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.spec.*",
    "!dist/**/__mocks__/*",
    "!dist/**/*.test.*",
    "!dist/BBoxMap/data/*",
    "!dist/BBoxMap/helpers/*"
  ],
  "peerDependencies": {
    "sass-embedded": "^1.93.3",
    "svelte": "^5.43.10"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.48.5",
    "@sveltejs/package": "^2.5.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@turf/turf": "^7.3.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.10.1",
    "@versatiles/release-tool": "^2.4.4",
    "@vitest/coverage-v8": "^4.0.10",
    "cookie": "^1.0.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.0",
    "geojson": "^0.5.0",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.10",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "publint": "^0.3.15",
    "sass-embedded": "^1.93.3",
    "svelte": "^5.43.10",
    "svelte-check": "^4.3.4",
    "svelte-preprocess": "^6.0.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.2.2",
    "vitest": "^4.0.10"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "@versatiles/style": "^5.7.0",
    "maplibre-gl": "^5.13.0"
  }
}

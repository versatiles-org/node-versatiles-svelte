{
  "name": "@versatiles/svelte",
  "version": "0.0.4",
  "scripts": {
    "build": "vite build && npm run package",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "dev": "vite dev",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepack": "npm run package",
    "prepublishOnly": "npm run package",
    "preview": "vite preview",
    "screenshots": "npm run build && npx tsx ./scripts/screenshots.ts",
    "release": "npm run build && npx vrt release-npm",
    "test:integration": "playwright test",
    "test:unit": "vitest run",
    "test": "npm run test:integration && npm run test:unit",
    "upgrade": "npm-check-updates -u && rm -f package-lock.json; rm -rf node_modules; npm i && npm update"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.spec.*",
    "!dist/**/*.test.*",
    "!dist/BBoxMap/data/*",
    "!dist/BBoxMap/helpers/*"
  ],
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@sveltejs/adapter-auto": "^3.2.5",
    "@sveltejs/kit": "^2.5.28",
    "@sveltejs/package": "^2.3.5",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@turf/turf": "^7.1.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.5.5",
    "@types/split2": "^4.2.3",
    "@versatiles/release-tool": "^1.2.5",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.44.0",
    "geojson": "^0.5.0",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "publint": "^0.2.11",
    "split2": "^4.2.0",
    "svelte": "^4.2.19",
    "svelte-check": "^4.0.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0",
    "vite": "^5.4.7",
    "vitest": "^2.1.1"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "@versatiles/style": "^4.4.1",
    "maplibre-gl": "^4.7.0"
  }
}

{
  "name": "@versatiles/svelte",
  "version": "0.1.2",
  "scripts": {
    "build": "vite build && npm run package",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "dev": "vite dev",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepack": "npm run package",
    "prepublishOnly": "npm run package",
    "preview": "vite preview",
    "screenshots": "npm run build && npx tsx ./scripts/screenshots.ts",
    "release": "npm run build && npx vrt release-npm",
    "test:integration": "playwright test",
    "test:unit": "vitest run",
    "test": "npm run test:integration && npm run test:unit",
    "upgrade": "npm-check-updates -u && rm -f package-lock.json; rm -rf node_modules; npm update --save && npm install"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.spec.*",
    "!dist/**/*.test.*",
    "!dist/BBoxMap/data/*",
    "!dist/BBoxMap/helpers/*"
  ],
  "peerDependencies": {
    "svelte": "^5.2.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/package": "^2.3.7",
    "@sveltejs/vite-plugin-svelte": "^5.0.1",
    "@turf/turf": "^7.1.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.10.1",
    "@types/split2": "^4.2.3",
    "@versatiles/release-tool": "^1.2.6",
    "cookie": "^1.0.2",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.1",
    "geojson": "^0.5.0",
    "globals": "^15.12.0",
    "npm-check-updates": "^17.1.11",
    "prettier": "^3.4.1",
    "prettier-plugin-svelte": "^3.3.2",
    "publint": "^0.2.12",
    "split2": "^4.2.0",
    "svelte": "^5.2.12",
    "svelte-check": "^4.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0",
    "vite": "^6.0.1",
    "vitest": "^2.1.6"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "@versatiles/style": "^5.0.0",
    "maplibre-gl": "^4.7.1"
  }
}
